server {
    listen 80 default_server;
    listen [::]:80 default_server;

    location / {
        root /usr/share/nginx/html;
        index index.html;
    }

    location /api {
        proxy_pass http://${URL_LB}:8081/;
        proxy_set_header Host $http_host;
    }

    location /apo {
        proxy_pass http://${URL_LB}:8080/;
        proxy_set_header Host $http_host;
    }
}